<?xml version="1.0" encoding="iso-8859-1"?>
<scene>
<!--  test2.pov -->
<!--  -->
<!--  Test of camera inside sphere. The resulting bitmap should be all -->
<!--  black as there are no lights defined inside the sphere. -->
<!--  -->
<!--  Tracer options: -z 1 -w 1 -h 1 -x 240 -->
    <camera>
      <location>
        <vector x="0.000" y="0.000" z="-1.000"/>
      </location>
      <sky>
        <vector x="0.000" y="1.000" z="0.000"/>
      </sky>
      <look_at>
        <vector x="0.000" y="0.000" z="0.000"/>
      </look_at>
    </camera>

    <background>
      <color red="0.000" green="0.000" blue="1.000"/>
    </background>

  <world>
    <light>
      <position>
        <vector x="5.000" y="0.000" z="-10.000"/>
      </position>
    </light>

    <sphere radius="2.000">
      <location>
        <vector x="0.000" y="0.000" z="0.000"/>
      </location>
      <surface>
        <finish diffuse="1.000" reflect="0.700"/>
        <pigment>
          <color red="1.000" green="0.000" blue="0.000"/>
        </pigment>
      </surface>
    </sphere>

  </world>
</scene>
